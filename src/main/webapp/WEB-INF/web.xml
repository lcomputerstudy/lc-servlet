<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" 
	version="3.1">

    <servlet>
        <servlet-name>frontController</servlet-name>
        <servlet-class>com.lcomputerstudy.servlet.DispatcherServlet</servlet-class>
        
        <init-param>
			<param-name>componentScanPackage</param-name>
			<param-value>com.lcomputerstudy.servlet</param-value>
		</init-param>
		<init-param>
			<param-name>prefix</param-name>
			<param-value></param-value>
		</init-param>
		<init-param>
			<param-name>suffix</param-name>
			<param-value>.jsp</param-value>
		</init-param>
		
		<load-on-startup>1</load-on-startup>
	</servlet>
        
	<servlet-mapping>
		<servlet-name>frontController</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	
	<context-param>
		<param-name>dbId</param-name>
		<param-value>test</param-value>
	</context-param>
	<context-param>
		<param-name>dbPassword</param-name>
		<param-value>1234</param-value>
	</context-param>
	
	<filter>
		<filter-name>SessionFilter</filter-name>
		<filter-class>com.lcomputerstudy.servlet.filter.SessionFilter</filter-class>
	</filter>
    <filter-mapping>
    	<filter-name>SessionFilter</filter-name>
    	<url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>